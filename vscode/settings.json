{
    "editor.fontFamily": "monospace",
    "keyboard.dispatch": "keyCode",
    "window.menuBarVisibility": "toggle",
    "git.enabled": true,
    "search.followSymlinks": false,
    "workbench.startupEditor": "newUntitledFile",
    "workbench.iconTheme": "vscode-icons",
    "workbench.activityBar.visible": true,
    "workbench.list.openMode": "doubleClick",
    "workbench.editor.enablePreview": false,
    "workbench.editor.tabSizing": "shrink",
    "editor.minimap.enabled": false,
    "editor.hideCursorInOverviewRuler": true,
    "editor.formatOnSave": true,
    "breadcrumbs.enabled": false,
    "vsicons.dontShowNewVersionMessage": true,
    "json.format.enable": false,
    "editor.renderIndentGuides": false,
    "editor.quickSuggestions": false,
    "files.trimTrailingWhitespace": true,
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "scm.diffDecorations": "all",
    "git.confirmSync": false,
    "update.mode": "none",
    "terminal.external.linuxExec": "alacritty",
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,
    "extensions.ignoreRecommendations": true,
    "workbench.editor.untitled.hint": "hidden",
    "security.workspace.trust.enabled": false,
    "editor.inlayHints.fontFamily": "monospace",
    "scm.inputFontSize": 14,
    // Colorscheme
    "workbench.colorTheme": "Gruvbox Material Dark",
    "workbench.colorCustomizations": {
        "[Gruvbox Material Dark]": {
            "editorGroup.border": "#3C3836",
            "sideBar.border": "#3C3836",
            "button.foreground": "#282828",
            "checkbox.background": "#282828",
            "dropdown.background": "#282828",
            "input.background": "#28282800",
            "badge.foreground": "#282828",
            "list.hoverBackground": "#28282800",
            "activityBar.border": "#3C3836",
            "activityBar.background": "#282828",
            "activityBarBadge.foreground": "#282828",
            "sideBar.background": "#282828",
            "sideBarSectionHeader.background": "#28282800",
            "editorGroupHeader.tabsBackground": "#282828",
            "editorGroupHeader.noTabsBackground": "#282828",
            "tab.border": "#3C3836",
            "tab.inactiveBackground": "#282828",
            "tab.hoverBackground": "#282828",
            "tab.activeBackground": "#3C3836",
            "editor.background": "#282828",
            "editorBracketMatch.border": "#3C3836",
            "editorOverviewRuler.border": "#3C3836",
            "editorUnnecessaryCode.border": "#3C3836",
            "editorGutter.background": "#28282800",
            "editorWidget.background": "#282828",
            "debugToolBar.background": "#282828",
            "merge.border": "#3C3836",
            "panel.background": "#282828",
            "panel.border": "#3C3836",
            "statusBar.background": "#282828",
            "statusBar.border": "#3C3836",
            "statusBar.debuggingBackground": "#282828",
            "statusBar.noFolderBackground": "#282828",
            "statusBar.noFolderBorder": "#3C3836",
            "statusBarItem.prominentBackground": "#282828",
            "statusBarItem.remoteBackground": "#282828",
            "titleBar.activeBackground": "#282828",
            "titleBar.inactiveBackground": "#282828",
            "titleBar.border": "#3C3836",
            "menubar.selectionBackground": "#282828",
            "menubar.selectionBorder": "#3C3836",
            "menu.background": "#282828",
            "notifications.background": "#282828",
            "extensionButton.prominentForeground": "#282828",
            "extensionBadge.remoteForeground": "#282828",
            "settings.numberInputBackground": "#282828",
            "settings.textInputBackground": "#282828",
            "settings.checkboxBackground": "#282828",
            "settings.dropdownBackground": "#282828",
            "editor.snippetFinalTabstopHighlightBorder": "#3C3836",
            "notebook.focusedCellBackground": "#282828",
            "notebook.cellHoverBackground": "#282828",
        },
    },
    // Programming language specific settings
    // C
    "C_Cpp.intelliSenseEngine": "Disabled",
    "C_Cpp.errorSquiggles": "Disabled",
    "clangd.arguments": [
        "-background-index",
        "-compile-commands-dir=build/",
        "--header-insertion=never"
    ],
    "clangd.semanticHighlighting": false,
    "clangd.onConfigChanged": "restart",
    "[c]": {
        "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd"
    },
    // Go
    "go.formatTool": "goimports",
    "go.useLanguageServer": true,
    "[go]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true,
        },
        // Optional: Disable snippets, as they conflict with completion ranking.
        "editor.snippetSuggestions": "none",
    },
    "[go.mod]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true,
        },
    },
    "gopls": {
        // Add parameter placeholders when completing a function.
        "usePlaceholders": true,
        // If true, enable additional analyses with staticcheck.
        // Warning: This will significantly increase memory usage.
        "staticcheck": false,
        // Experimental settings
        "completeUnimported": true, // autocomplete unimported packages
        "deepCompletion": true, // enable deep completion
    },
    "go.languageServerFlags": [
        "-rpc.trace", // for more detailed debug logging
        "serve",
        "--debug=localhost:6060", // to investigate memory usage, see profiles
    ],
}
